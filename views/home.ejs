<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="/css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/desktop.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

    <title>BigScreen</title>

</head>

<body>

    <header>
        <%- include ./partials/headerPartial.ejs %>
    </header>
    

    <main>

        <section class="slider-container">
            <div class="slidershow middle">
                <div class="slides">
                
                    <input type="radio" name="r" id="r1" checked>
                
                    <input type="radio" name="r" id="r2">
                
                    <input type="radio" name="r" id="r3">
                
                    <input type="radio" name="r" id="r4">
                
                    <input type="radio" name="r" id="r5">
                
                    <div class="slide s1">
                        <img src="https://www.teahub.io/photos/full/74-742214_alien-covenant-movie-poster.jpg" alt="">
                    </div>
                
                    <div class="slide s2">
                        <img src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/a58a7719-0dcf-4e0b-b7bb-d2b725dbbb8e/deu7no3-75f2aea5-d668-4ddd-8d73-9203f8b3004f.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..mGJeERKLIjquFjWiKP7nqZfaLFv9d4WT40Y-xQqErRo" alt="">
                    </div>
                
                    <div class="slide s3">
                        <img src="https://lafortalezadelasoledad.es/wp-content/uploads/2019/07/1500x500.jpeg" alt="">
                    </div>
                
                    <div class="slide s4">
                        <img src="https://cronicasdelmultiverso.com/wp-content/uploads/2016/02/The-Martian-Teaser-Banner.jpg" alt="">
                    </div>

                    <div class="slide s5">
                        <img src="https://2.bp.blogspot.com/-16cNUY1O6Ro/WTIL7iDSM5I/AAAAAAAAKJA/Mb5EYXMRSPMTeMk5KSCsXghrm_RjDuM-wCLcB/s1600/Wonder%2BWoman%2Bmovie%2Bbanner.jpg" alt="">
                    </div>
                    
                    <div class="navigation">
                        <label for="r1" class="bar"></label>
                        <label for="r2" class="bar"></label>
                        <label for="r3" class="bar"></label>
                        <label for="r4" class="bar"></label>
                        <label for="r5" class="bar"></label>
                    </div>
                </div>
            </div>

        </section>

        <section class="peliculas-container-desktop">

            <h2 class="titulo-section">Películas</h2>

            <div class="peliculas-container">

                <% estrenos.forEach(product => { %>

                <div class="peliculas-info">
                    <a href="/movies/detail/<%= product.id %> "><img src="/images/products/<%= product.image %> " alt="<%= product.name %> poster"></a>
                    <p class="peliculas-titulo"><%= product.name%>  </p>
                </div>

                <% }) %>

            </div>

        </section>    

        <section class="peliculas-container-desktop">
            
            <h2 class="titulo-section">Próximamente</h2>
            
            <div class="peliculas-container">

                <% proximamente.forEach(product => { %>

                    <div class="peliculas-info">
                        <a href="/movies/detail/<%= product.id %> "><img src="/images/products/<%= product.image %> " alt="<%= product.name %> poster"></a>
                        <div class="peliculas-titulo"><%= product.name%>  </div>
                    </div>

                    <% }) %>

            </div>

        </section>

        <section class="peliculas-container-desktop">
            
            <h2 class="titulo-section">Re-Estrenos</h2>
            
            <div class="peliculas-container">

                <% reestrenos.forEach(product => { %>

                    <div class="peliculas-info">
                        <a href="/movies/detail/<%= product.id %> "><img src="/images/products/<%= product.image %> " alt="<%= product.name %> poster"></a>
                        <div class="peliculas-titulo"><%= product.name%>  </div>
                    </div>

                    <% }) %>

            </div>

        </section>

    </main>

    <footer>
        <%- include ./partials/footerPartial.ejs %>
    </footer>
</body>
</html>